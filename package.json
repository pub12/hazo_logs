{
  "name": "hazo_logs",
  "version": "1.0.8",
  "description": "Logger for hazo packages - Winston wrapper with singleton pattern",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.js",
      "require": "./dist/ui/index.js"
    },
    "./ui/server": {
      "types": "./dist/ui/server.d.ts",
      "import": "./dist/ui/server.js",
      "require": "./dist/ui/server.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.js"
    }
  },
  "files": [
    "dist",
    "config"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev:test-app": "npm run build && npm pack && cd test-app && npm install && npm run dev",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pub12/hazo_logs.git"
  },
  "keywords": [
    "logs",
    "logger",
    "winston",
    "hazo",
    "log-viewer"
  ],
  "author": "Pubs Abayasiri",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": {
    "url": "https://github.com/pub12/hazo_logs/issues"
  },
  "homepage": "https://github.com/pub12/hazo_logs#readme",
  "dependencies": {
    "ini": "^4.1.0",
    "server-only": "^0.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "hazo_ui": "file:../hazo_ui",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "hazo_ui": ">=2.0.0",
    "next": ">=14.0.0",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "hazo_ui": {
      "optional": true
    }
  }
}
